<AdminWindow>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y:.3
            orientation: 'vertical'

            BoxLayout:
                size_hint_y:.2
                Label:
                    id:Toplabel
                    text:"Kivy Database !"
                

            BoxLayout:
                size_hint_y:.1
                orientation: 'horizontal'
                TextInput:
                    id:name
                    hint_text:"Name"
					write_tab: False
                TextInput:
                    id:lname
                    hint_text:" email"
					write_tab: False
                TextInput:
                    id:ID
                    hint_text:"password"
					write_tab: False
            BoxLayout:
                size_hint_y:.1
                Button:
                    text:"Insert"
                    on_press:root.getuser()
                Button:
                    text:"Update"
					on_press:root.updateuser()
                Button:
                    text:"delete"
					on_press:root.deleteuser() 
                
        BoxLayout:
            size_hint_y:.8
            Button:
                text:'Table'
				on_press:root.readtable()
            Button:
                text: "Back"
                size_hint: 0.1, 0.22
                on_release:
                    app.root.current = "test"
                    root.manager.transition.direction = "up"
<ShowOrderWindow>:
    BoxLayout:
        Button:
            text: "Get data"
            on_press: 
                root.get_data()
        Button:
            text: "Back"
            on_press:
                app.root.current = "org"
        RecycleView:
            data: [{'text':"ID:{} Type:{} Creator:{} Reciever:{}".format(id,type,creator,reciever)} for id,type,creator,reciever in root.rows]
            viewclass: "Label"
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
			    height: self.minimum_height
                orientation: 'vertical'