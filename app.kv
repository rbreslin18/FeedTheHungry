
<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2
            
            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
                root.termsPage()
        Label:
            size_hint: 0.5,0.12
            pos_hint: {"x":.7, "y":0.3}
            text: "Admin? "
            font_size: (root.width**2 + root.height**2) / 14**4
        CheckBox:
            id: adm
            size_hint: 0.5,0.12
            pos_hint:{"x":0.6,"y":0.3}
        Label:
            size_hint: 0.5,0.12
            pos_hint: {"x":.7, "y":0.2}
            text: "Organization? "
            font_size: 10
        CheckBox:
            id: organ
            size_hint: 0.5,0.12
            pos_hint:{"x":0.6,"y":0.2}
        Label:
            size_hint: 0.5,0.12
            pos_hint: {"x":.7, "y":0.1}
            text: "Donator? "
            font_size: (root.width**2 + root.height**2) / 14**4
        CheckBox:
            id: donator
            size_hint: 0.5,0.12
            pos_hint:{"x":0.6,"y":0.1}
<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:
        TextInput:
            id: email
            font_size: 14
            multiline: False
            pos_hint: {"x": 0.3 , "top":0.65}
            size_hint: 0.4, 0.05
            write_tab: False
            hint_text: "Email"
        TextInput:
            id: password
            font_size: 14
            multiline: False
            password: True
            pos_hint: {"x": 0.3, "top":0.58}
            size_hint: 0.4, 0.05
            write_tab: False
            hint_text: "Password"
        Button:
            pos_hint:{"x":0.35,"y":0.3}
            size_hint: 0.3, 0.08
            font_size: 15
            text: "Log in"
            background_color:'#98ff98'
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.45,"y":0.2}
            size_hint: 0.1, 0.01
            font_size: 15
            text: "Don't have an account? Create one"
            background_color: 0,0,0,0
            color: '#98ff98'
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()
                
        Button:
            pos_hint:{"x":0.45,"y":0.45}
            size_hint: 0.1, 0.01
            font_size: 15
            text: "Forgot Password?"
            background_color: 0,0,0,0
            color: '#98ff98'
            on_release:
                root.manager.transition.direction = "right"
                root.rePass()
               
        Button:
            pos_hint:{"x":0.8,"y":0.09}
            size_hint: 0.01, 0.01
            font_size: 12
            text: "Test"
            on_release:
                root.manager.transition.direction = "up"
                root.test()    

