# my.kv
<MyGrid>:
    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:1
            Label:
                text: "Cancel Order: "

        GridLayout:
            cols:2

            Label:
                text: "Name: "

            TextInput:
                multinline:False

            Label:
                text: "Order Number: "

            TextInput:
                multiline:False



            Label:
                text: "Reason for Cancel: "

            TextInput:
                multiline:False

        Button:
            text:"Submit"
            on_press: 
                root.popup()




